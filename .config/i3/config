		active_workspace   $i3bar-clr-bg      	$i3bar-clr-bg      	$clr-txt
		inactive_workspace $i3bar-clr-ia-bg  	$i3bar-clr-bg  		$clr-ia-txt
		urgent_workspace   $clr-urgent-bg    	$clr-urgent-bg    	$clr-txt 
	}
}

