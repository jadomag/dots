! -----------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------
rofi.color-enabled: true
rofi.separator-style: solid
rofi.color-window: #383c4a, #383c4a, #2f343f
rofi.color-normal: #383c4a, #c1c1c1, #383c4a, #4084d6, #ffffff
rofi.color-active: #383c4a, #00bf8c, #383c4a, #00bf8c, #ffffff
rofi.color-urgent: #383c4a, #e53935, #383c4a, #e53935, #ffffff

! ------------------------------------------------------------
! urxvt config
! ------------------------------------------------------------

! set font
URxvt.font: 		xft:Roboto Mono:pixelsize=14:antialias=true

!  transparency
URxvt.transparent: 	true
URxvt.shading:		10				 

URxvt.scrollBar:	false

! ------------------------------------------------------------
! urxvt color scheme
! ------------------------------------------------------------

! special
*.foreground:   #d0d0d0
*.background:   #151515
*.cursorColor:  #d0d0d0

! ! black
*.color0:       #151515
*.color8:       #505050

! ! red
*.color1:       #ac4142
*.color9:       #ac4142

! ! green
*.color2:       #90a959
*.color10:      #90a959

! ! yellow
*.color3:       #f4bf75
*.color11:      #f4bf75

! ! blue
*.color4:       #6a9fb5
*.color12:      #6a9fb5

! ! magenta
*.color5:       #aa759f
*.color13:      #aa759f

! ! cyan
*.color6:       #75b5aa
*.color14:      #75b5aa

! ! white
*.color7:       #d0d0d0
*.color15:      #f5f5f5
